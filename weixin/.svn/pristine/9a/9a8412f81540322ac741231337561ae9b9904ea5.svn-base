/* pages/homepage/homepage.wxss */

.block {
  margin-top: 8px;
}

.banner-pic {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.item-list {
  display: flex;
  flex-wrap: wrap;
}

.function {
  width: 20%;
  height: 80px;
}

.item-pic {
  width: 52%;
  height: 50%;
  margin-left: 24%;
  margin-top: 10%;
}

.item-text {
  display: block;
  text-align: center;
  font-size: 11px;
  color: #466466;
}

.banner {
  display: inline-block;
}

.banner-line {
  float: left;
}

.more {
  float: right;
  width: 60px;
  color: #869c9f;
  line-height: 40px;
  text-align: left;
  font-size: 12px;
}

.icon-go {
  color: #869c9f;
  line-height: 40px;
  font-size: 10px;
  padding-left: 8px;
}

.school-list {
  display: flex;
  flex-wrap: wrap;
}

.school {
  width: 50%;
  height: 140px;
  text-align: center;
  color: #466466;
}

.school-i5 {
  height: 130px;
}

.school text {
  display: block;
}

.school-pic {
  width: 60%;
  height: 50%;
  margin-top: 5%;
}

.school-name {
  font-size: 12px;
  padding: 0px 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: calc(100% - 8px);
}

.school-place {
  font-size: 9px;
  margin-top: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0px 4px;
  width: calc(100% - 8px);
}

.blank {
  width: 100%;
  height: 8px;
}
