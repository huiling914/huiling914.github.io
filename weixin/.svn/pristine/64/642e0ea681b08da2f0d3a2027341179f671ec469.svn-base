/* pages/school/details/course/course.wxss */
@import '../details.wxss';

page {
  background-color: #fff;
}

.course-content {
  width: 100%;
  padding-top: 10px;
}

.left {
  width: 50px;
  height: 70px;
  float: left;
}

.right {
  width: 100%;
  height: 70px;
  float: right;
}

.ask {
  width: 44px;
  height: 22px;
  border-radius: 10px;
  border: 1px #25aab1 solid;
  background-color: #fff;
  color: #25aab1;
  font-size: 12px;
  line-height: 22px;
  padding: 0;
  margin-top: 12px;
}

.course-name {
  font-size: 22px;
  font-weight: bold;
  color: #466466;
}

.originalPrice {
  width: 100%;
  text-align: right;
  color: #c5c5c5;
  font-size: 20px;
  padding-right: 8px;
  text-decoration: line-through;
}

.originalPrice .text {
  font-size: 10px;
  color: #c5c5c5;
}

.originalPrice text {
  font-size: 12px;
}

.discountPrice {
  width: 100%;
  text-align: right;
  color: #25aab1;
  font-size: 30px;
  padding-right: 8px;
}

.discountPrice .text {
  font-size: 13px;
  color: #25aab1;
}

.discountPrice text {
  font-size: 20px;
}
.div{
  height:auto;
}
.div text {
  display: block;
  font-size: 12px;
  line-height: 16px;
}

.icon-course-desc {
  color: #466466;
  font-size: 18px;
  line-height: 20px;
}

.course-desc {
  font-size: 16px;
  color: #466466;
  line-height: 20px;
  padding-bottom: 8px;
}

.sign-up-blank {
  background-color: transparent;
  width: 100%;
  height: 68px;
}

.sign-up {
  width: 100%;
  height: 48px;
  border-style: solid none none none;
  border-width: 0.5px;
  border-color: #e9e9e9;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
}

.sign-up .left {
  width: calc(100% - 82px);
  height: 100%;
}

.sign-up .right {
  width: 82px;
  height: 100%;
  line-height: 48px;
  font-size: 16px;
  font-weight: bold;
  letter-spacing: 8px;
  color: #fff;
  text-align: center;
  background-color: #25aab1;
}

.total {
  color: #466466;
  font-size: 12px;
  padding-left: 12px;
  margin-top: 4px;
}

.total text {
  color: #25aab1;
  font-size: 20px;
}

.personNum {
  color: #466466;
  font-size: 10px;
  padding-left: 12px;
}
